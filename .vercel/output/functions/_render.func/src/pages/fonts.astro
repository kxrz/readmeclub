---
// Layout
import BaseLayout from "@/layouts/BaseLayout.astro";
// Fundation
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/components/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import Seo from "@/components/fundations/head/Seo.astro";
import { useTranslations, getLangFromUrl, getLangPrefix } from '@/i18n/utils';
import tipsData from '../data/tips.json';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const langPrefix = getLangPrefix(lang);
const siteUrl = Astro.site || 'https://readme.club';

// Filter tips related to fonts
const fontTips = tipsData.tips.filter(tip => 
  tip.category === 'Fonts And Languages' || 
  tip.tip.toLowerCase().includes('font')
);
---

<BaseLayout>
  <Fragment slot="head">
    <Seo
      title={`${t('fonts.title')} - ${t('site.name')}`}
      description={t('fonts.subtitle')}
      canonical={`${siteUrl}${langPrefix}/fonts`}
      lang={lang}
    />
  </Fragment>

  <section>
    <Wrapper variant="hero">
      <Text
        tag="h1"
        variant="displaySM"
        class="text-base-900 font-medium 2xl:text-5xl tracking-tight"
      >
        {t('fonts.title')}
      </Text>
      <Text
        tag="p"
        variant="textBase"
        class="mt-4 text-base-600 text-balance 2xl:text-xl"
      >
        {t('fonts.subtitle')}
      </Text>
    </Wrapper>
  </section>

  <section>
    <Wrapper variant="standard" class="py-6">
      <div class="max-w-none">
        <Text tag="p" variant="textBase" class="text-base-700 mb-8 text-lg leading-relaxed">
          {t('fonts.intro')}
        </Text>

        <div class="bg-gradient-to-br from-accent-50 to-base-50 border-2 border-accent-200 rounded-xl p-8 mb-6 shadow-sm">
          <div class="flex items-start gap-4 mb-6">
            <div class="flex-shrink-0 w-12 h-12 bg-accent-500 rounded-lg flex items-center justify-center">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="white"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="icon icon-tabler icons-tabler-outline icon-tabler-tools"
              >
                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                <path d="M3 21h4l13 -13a1.5 1.5 0 0 0 -4 -4l-13 13v4"></path>
                <path d="M14.5 5.5l4 4"></path>
                <path d="M12 8l-5 5"></path>
              </svg>
            </div>
            <div class="flex-1">
              <Text tag="h2" variant="textLG" class="text-base-900 font-bold mb-3">
                {t('fonts.recommended_tool')}
              </Text>
              <Text tag="p" variant="textBase" class="text-base-700 leading-relaxed mb-2">
                {t('fonts.tool_description')}
              </Text>
              <Text tag="p" variant="textSM" class="text-base-600">
                {t('fonts.tool_credit')}{' '}
                <a
                  href="https://www.reddit.com/user/Lakafior/"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-accent-600 hover:text-accent-700 underline font-medium"
                >
                  Lakafior
                </a>
              </Text>
            </div>
          </div>
          <div class="flex flex-wrap gap-3">
            <a
              href="https://xteink.lakafior.com/"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-block"
            >
              <Button variant="accent" size="sm" class="gap-2">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <path d="M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0"></path>
                  <path d="M21 21l-6 -6"></path>
                </svg>
                {t('fonts.visit_tool')}
              </Button>
            </a>
            <a
              href="https://xteink.lakafior.com/gallery.html"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-block"
            >
              <Button variant="muted" size="sm" class="gap-2">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <path d="M4 4m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z"></path>
                  <path d="M4 8l16 0"></path>
                  <path d="M8 4l0 16"></path>
                </svg>
                {t('fonts.browse_gallery')}
              </Button>
            </a>
          </div>
        </div>

        <div class="bg-gradient-to-br from-base-50 to-accent-50 border-2 border-base-300 rounded-xl p-8 mb-12 shadow-sm">
          <div class="flex items-start gap-4 mb-6">
            <div class="flex-shrink-0 w-12 h-12 bg-base-900 rounded-lg flex items-center justify-center">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="white"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="icon icon-tabler icons-tabler-outline icon-tabler-file-type-epub"
              >
                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                <path d="M14 3v4a1 1 0 0 0 1 1h4"></path>
                <path d="M5 12v-7a2 2 0 0 1 2 -2h7l5 5v4"></path>
                <path d="M5 18h1.5a1.5 1.5 0 0 0 0 -3h-1.5v6"></path>
                <path d="M17 18h-2.5a1.5 1.5 0 0 0 0 3h2.5"></path>
                <path d="M11 21v-6"></path>
                <path d="M11 18h2"></path>
              </svg>
            </div>
            <div class="flex-1">
              <Text tag="h2" variant="textLG" class="text-base-900 font-bold mb-3">
                {t('fonts.converter_tool')}
              </Text>
              <Text tag="p" variant="textBase" class="text-base-700 leading-relaxed mb-2">
                {t('fonts.converter_description')}
              </Text>
              <Text tag="p" variant="textSM" class="text-base-600 mb-2">
                {t('fonts.converter_note')}
              </Text>
              <Text tag="p" variant="textSM" class="text-base-600">
                {t('fonts.tool_credit')}{' '}
                <a
                  href="https://www.reddit.com/user/h0rm0n/"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-accent-600 hover:text-accent-700 underline font-medium"
                >
                  h0rm0n
                </a>
              </Text>
            </div>
          </div>
          <div class="flex flex-wrap gap-3">
            <a
              href="https://x4converter.rho.sh/"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-block"
            >
              <Button variant="accent" size="sm" class="gap-2">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                  <path d="M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0"></path>
                  <path d="M21 21l-6 -6"></path>
                </svg>
                {t('fonts.visit_tool')}
              </Button>
            </a>
          </div>
        </div>

        {fontTips.length > 0 && (
          <div class="mt-12">
            <div class="flex items-center gap-3 mb-8">
              <div class="h-px flex-1 bg-gradient-to-r from-transparent via-base-300 to-transparent"></div>
              <Text tag="h2" variant="textLG" class="text-base-900 font-bold whitespace-nowrap">
                {t('fonts.tips_title')}
              </Text>
              <div class="h-px flex-1 bg-gradient-to-r from-transparent via-base-300 to-transparent"></div>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              {fontTips.map((tip, index) => (
                <div
                  key={index}
                  class="group relative border-2 border-base-200 rounded-lg p-5 hover:border-accent-300 hover:shadow-md transition-all bg-white"
                >
                  <div class="absolute top-3 right-3 w-8 h-8 bg-accent-100 rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="16"
                      height="16"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      class="text-accent-600"
                    >
                      <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                      <path d="M12 12m-9 0a9 9 0 1 0 18 0a9 9 0 1 0 -18 0"></path>
                      <path d="M12 8v4"></path>
                      <path d="M12 16h.01"></path>
                    </svg>
                  </div>
                  <Text tag="p" variant="textSM" class="text-base-700 leading-relaxed pr-8">
                    {t(`fonts.tip.${tip.id}`) || tip.tip}
                  </Text>
                </div>
              ))}
            </div>
          </div>
        )}
      </div>
    </Wrapper>
  </section>
</BaseLayout>
