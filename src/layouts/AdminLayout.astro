---
/**
 * Layout admin avec navigation sidebar
 */
import '@/styles/global.css';
import AdminNav from "@/components/admin/AdminNav.astro";

interface Props {
  title: string;
  currentPage?: 'resources' | 'wallpapers' | 'news' | 'newsletter' | 'stats' | 'features';
}

const { title, currentPage } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="robots" content="noindex, nofollow" />
  <title>{title} - Admin | readme.club</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
</head>
<body class="bg-base-100 min-h-screen">
  <AdminNav currentPage={currentPage} />
  
  <main class="ml-64 min-h-screen">
    <!-- Header -->
    <header class="bg-white border-b border-base-200 px-8 py-6">
      <h1 class="text-2xl font-semibold text-base-900">{title}</h1>
    </header>
    
    <!-- Content -->
    <div class="p-8">
      <slot />
    </div>
  </main>
</body>
</html>
