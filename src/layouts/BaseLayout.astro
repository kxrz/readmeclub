---
// Fundations
import "@/styles/global.css";
import BaseHead from "@/components/fundations/head/BaseHead.astro";
// Components
import Footer from "@/components/global/Footer.astro";
import Navigation from "@/components/navigation/Navigation.astro";
import WelcomeBanner from "@/components/common/WelcomeBanner.astro";
import Analytics from '@vercel/analytics/astro';
import SpeedInsights from '@vercel/speed-insights/astro';
import Clarity from '@/components/common/Clarity.astro';
import { getLangFromUrl } from '@/i18n/utils';

const lang = getLangFromUrl(Astro.url);
---

<html
  lang={lang}
  class="scroll-smooth selection:bg-accent-50 selection:text-accent-500"
>
  <head>
    <BaseHead />
    <slot name="head" />
    {/* Script pour éviter le flash de contenu incorrect (FOUC) */}
    <script is:inline>
      (function() {
        // 1) iOS: forcer une palette sRGB (hex) le plus tôt possible
        // (évite les rendus illisibles quand OKLCH est partiellement supporté)
        try {
          var ua = navigator.userAgent || '';
          var isIOS = /iP(hone|ad|od)/.test(ua);
          if (isIOS) {
            document.documentElement.dataset.colorspace = 'srgb';
          }
        } catch (e) {}

        // Helpers localStorage (iOS Private / restrictions peuvent throw)
        // Syntaxe ES5 pour compatibilité maximale
        var safeGet = function(key) {
          try { return localStorage.getItem(key); } catch (e) { return null; }
        };
        var safeSet = function(key, value) {
          try { localStorage.setItem(key, value); } catch (e) {}
        };

        // 2) Theme (light/dark) - robuste sur iOS
        var stored = safeGet('theme');
        var prefersDark = false;
        try {
          if (window.matchMedia) {
            prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
          }
        } catch (e) {}
        
        var theme = (stored === 'light' || stored === 'dark') ? stored : (prefersDark ? 'dark' : 'light');
        if (theme === 'dark') {
          document.documentElement.classList.add('dark');
        } else {
          document.documentElement.classList.add('light');
        }

        // Accent theme (tests): mustard / graphite / olive
        var accent = 'mustard'; // default
        try {
          var params = new URLSearchParams(window.location.search);
          var accentParam = params.get('accent');
          var storedAccent = safeGet('accent');
          
          if (accentParam === 'mustard' || accentParam === 'graphite' || accentParam === 'olive') {
            accent = accentParam;
          } else if (storedAccent === 'mustard' || storedAccent === 'graphite' || storedAccent === 'olive') {
            accent = storedAccent;
          }
        } catch (e) {}

        document.documentElement.dataset.accent = accent;
        safeSet('accent', accent);
      })();
    </script>
  </head>
  <body
    x-data="{ rightDrawerOpen: false }"
    @keydown.window.escape="rightDrawerOpen = false"
    class="bg-base-50 flex flex-col lg:min-h-svh transition-colors duration-200"
  >
    <Navigation />
    <main class="grow ">
      <slot />
    </main>
    <Footer />
    <WelcomeBanner />
    <Analytics />
    <SpeedInsights />
    <Clarity />
  </body>
</html>
