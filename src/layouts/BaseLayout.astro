---
// Fundations
import "@/styles/global.css";
import BaseHead from "@/components/fundations/head/BaseHead.astro";
// Components
import Footer from "@/components/global/Footer.astro";
import Navigation from "@/components/navigation/Navigation.astro";
import WelcomeBanner from "@/components/common/WelcomeBanner.astro";
import NewsletterPopup from "@/components/newsletter/NewsletterPopup.astro";
import Analytics from '@vercel/analytics/astro';
import SpeedInsights from '@vercel/speed-insights/astro';
import Clarity from '@/components/common/Clarity.astro';
import { getLangFromUrl } from '@/i18n/utils';

const lang = getLangFromUrl(Astro.url);
---

<html
  lang={lang}
  class="scroll-smooth selection:bg-accent-50 selection:text-accent-500"
>
  <head>
    <BaseHead />
    <slot name="head" />
    {/* Script pour éviter le flash de contenu incorrect (FOUC) */}
    <script is:inline>
      (function() {
        const stored = localStorage.getItem('theme');
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        const theme = stored === 'light' || stored === 'dark' ? stored : (prefersDark ? 'dark' : 'light');
        if (theme === 'dark') {
          document.documentElement.classList.add('dark');
        } else {
          document.documentElement.classList.add('light');
        }

        // Accent theme (tests): mustard / graphite / olive
        const params = new URLSearchParams(window.location.search);
        const accentParam = params.get('accent');
        const storedAccent = localStorage.getItem('accent');
        const accent =
          accentParam === 'mustard' || accentParam === 'graphite' || accentParam === 'olive'
            ? accentParam
            : (storedAccent === 'mustard' || storedAccent === 'graphite' || storedAccent === 'olive')
              ? storedAccent
              : 'mustard';

        document.documentElement.dataset.accent = accent;
        try { localStorage.setItem('accent', accent); } catch {}

        // iOS Safari: forcer une palette sRGB (hex) pour éviter les rendus “délavés”
        // même quand OKLCH est partiellement supporté.
        try {
          const ua = navigator.userAgent;
          const isIOS = /iP(hone|ad|od)/.test(ua);
          const isWebKit = /WebKit/.test(ua);
          const isNotCriOS = !/CriOS/.test(ua);
          const isNotFxiOS = !/FxiOS/.test(ua);
          if (isIOS && isWebKit && isNotCriOS && isNotFxiOS) {
            document.documentElement.dataset.colorspace = 'srgb';
          }
        } catch {}
      })();
    </script>
  </head>
  <body
    x-data="{ rightDrawerOpen: false }"
    @keydown.window.escape="rightDrawerOpen = false"
    class="bg-base-50 flex flex-col lg:min-h-svh transition-colors duration-200"
  >
    <Navigation />
    <main class="grow ">
      <slot />
    </main>
    <Footer />
    <WelcomeBanner />
    <NewsletterPopup />
    <Analytics />
    <SpeedInsights />
    <Clarity />
  </body>
</html>
