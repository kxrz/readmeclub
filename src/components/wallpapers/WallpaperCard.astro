---
import Text from "@/components/fundations/elements/Text.astro";
import type { Wallpaper } from '@/lib/supabase/schema';
import type { WallpaperMetadata } from '@/lib/utils/wallpaper-loader';
import { useTranslations, getLangFromUrl, getLangPrefix } from '@/i18n/utils';
import { getWallpaperAuthorName } from '@/lib/utils/author';

interface Props {
  wallpaper: Wallpaper | WallpaperMetadata;
}

const { wallpaper } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const langPrefix = getLangPrefix(lang);

const wallpaperUrl = langPrefix ? `${langPrefix}/wallpapers/${wallpaper.id}` : `/wallpapers/${wallpaper.id}`;
// Utiliser le thumbnail optimisé (JPG pour BMP, WebP pour autres formats)
const thumbnailPath = ('thumbnail_path' in wallpaper && wallpaper.thumbnail_path) 
  ? wallpaper.thumbnail_path 
  : `/wallpapers/${wallpaper.id}/thumbnail.webp`;
// Déterminer le format selon original_path ou thumbnail_path
const isBmp = ('original_path' in wallpaper && wallpaper.original_path?.endsWith('.bmp')) || 
              thumbnailPath.endsWith('.jpg');
const imageUrl = isBmp 
  ? (('thumbnail_path' in wallpaper && wallpaper.thumbnail_path) 
      ? wallpaper.thumbnail_path 
      : `/wallpapers/${wallpaper.id}/thumbnail.jpg`)
  : thumbnailPath;
const authorName = 'author_name' in wallpaper && wallpaper.author_name 
  ? wallpaper.author_name 
  : ('reddit_username' in wallpaper && wallpaper.reddit_username 
    ? `u/${wallpaper.reddit_username}` 
    : '');
---

<a
  href={wallpaperUrl}
  class="group relative flex flex-col rounded-lg border border-base-200 dark:border-base-700 bg-base-50 dark:bg-base-100 dark:bg-base-200 overflow-hidden hover:border-accent-300 dark:hover:border-accent-500 hover:shadow-lg transition-all"
>
  <div class="aspect-[3/5] w-full overflow-hidden bg-base-100 dark:bg-base-200">
    <img
      src={imageUrl}
      alt={wallpaper.title || 'Wallpaper'}
      class="h-full w-full object-cover group-hover:scale-105 transition-transform"
      loading="lazy"
    />
  </div>
  
  <div class="p-4 flex-1">
    <div class="flex items-start justify-between gap-2 mb-2">
      <Text tag="h3" variant="textBase" class="font-semibold text-base-900 dark:text-base-50 line-clamp-2 group-hover:text-accent-500 dark:group-hover:text-accent-400">
        {wallpaper.title || 'Untitled Wallpaper'}
      </Text>
      {wallpaper.category && (
        <span class="shrink-0 text-xs uppercase text-base-500 dark:text-base-400 bg-base-100 dark:bg-base-200 px-2 py-1 rounded">
          {wallpaper.category}
        </span>
      )}
    </div>
    
    <div class="flex items-center justify-between mt-auto">
      <Text tag="span" variant="textXS" class="text-base-500 dark:text-base-400">
        {t('wallpapers.downloads', { count: wallpaper.download_count })}
      </Text>
      {authorName && (
        <Text tag="span" variant="textXS" class="text-base-500 dark:text-base-400">
          {authorName}
        </Text>
      )}
    </div>
  </div>
</a>

