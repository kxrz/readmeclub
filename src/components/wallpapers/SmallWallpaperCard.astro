---
import Text from "@/components/fundations/elements/Text.astro";
import type { Wallpaper } from '@/lib/supabase/schema';
import { useTranslations, getLangFromUrl, getLangPrefix } from '@/i18n/utils';

interface Props {
  wallpaper: Wallpaper;
}

const { wallpaper } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const langPrefix = getLangPrefix(lang);

const wallpaperUrl = langPrefix ? `${langPrefix}/wallpapers/${wallpaper.id}` : `/wallpapers/${wallpaper.id}`;
const imageUrl = wallpaper.file_url || '/placeholder-wallpaper.jpg';
---

<a
  href={wallpaperUrl}
  title={wallpaper.title || 'Wallpaper'}
  class="relative flex items-center gap-x-3 rounded-md bg-base-50 p-4 focus-outline-none"
>
  <div
    class="flex-shrink-0 p-1 size-16 bg-base-50 rounded-full items-center flex justify-center overflow-hidden"
  >
    <img
      src={imageUrl}
      alt={wallpaper.title || 'Wallpaper'}
      class="object-cover size-10 rounded-full"
      loading="lazy"
    />
  </div>
  <div class="min-w-0 flex-1">
    <span class="absolute inset-0" aria-hidden="true"></span>
    <div>
      <Text tag="h3" variant="textSM" class="font-medium text-base-900 dark:text-base-50">
        {wallpaper.title || 'Untitled Wallpaper'}
      </Text>
      <Text tag="p" variant="textXS" class="text-base-600 dark:text-base-400 mt-1 line-clamp-1">
        {wallpaper.category ? t(`wallpapers.category.${wallpaper.category}`) : t('wallpapers.title')}
      </Text>
    </div>
  </div>
</a>

