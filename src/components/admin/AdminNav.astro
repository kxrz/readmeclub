---
/**
 * Navigation admin - sidebar avec liens vers toutes les sections
 */
interface Props {
  currentPage?: 'resources' | 'wallpapers' | 'news' | 'newsletter' | 'stats' | 'features';
}

const { currentPage } = Astro.props;

const navItems = [
  { id: 'resources', label: 'Resources', href: '/admin/resources', icon: 'folder' },
  { id: 'wallpapers', label: 'Wallpapers', href: '/admin/wallpapers', icon: 'image' },
  { id: 'news', label: 'News', href: '/admin/news', icon: 'newspaper' },
  { id: 'newsletter', label: 'Newsletter', href: '/admin/newsletter-report', icon: 'mail' },
  { id: 'stats', label: 'Stats', href: '/admin/stats', icon: 'chart' },
  { id: 'features', label: 'Features', href: '/admin/features', icon: 'star' },
];

const icons: Record<string, string> = {
  folder: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />',
  image: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />',
  newspaper: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />',
  mail: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />',
  chart: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />',
  star: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />',
};
---

<nav class="bg-base-900 text-base-100 min-h-screen w-64 fixed left-0 top-0 flex flex-col">
  <!-- Logo / Title -->
  <div class="p-6 border-b border-base-700">
    <a href="/admin/resources" class="flex items-center gap-3">
      <div class="w-10 h-10 bg-accent-500 rounded-lg flex items-center justify-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
      </div>
      <div>
        <div class="font-semibold text-white">Admin</div>
        <div class="text-xs text-base-400">readme.club</div>
      </div>
    </a>
  </div>

  <!-- Navigation Links -->
  <div class="flex-1 py-6">
    <div class="px-4 mb-2 text-xs font-semibold text-base-500 uppercase tracking-wider">
      Content
    </div>
    <ul class="space-y-1 px-3">
      {navItems.slice(0, 3).map((item) => (
        <li>
          <a
            href={item.href}
            class={`flex items-center gap-3 px-3 py-2.5 rounded-lg transition-colors ${
              currentPage === item.id
                ? 'bg-accent-500 text-white'
                : 'text-base-300 hover:bg-base-800 hover:text-white'
            }`}
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" set:html={icons[item.icon]} />
            <span class="font-medium">{item.label}</span>
          </a>
        </li>
      ))}
    </ul>

    <div class="px-4 mb-2 mt-6 text-xs font-semibold text-base-500 uppercase tracking-wider">
      Tools
    </div>
    <ul class="space-y-1 px-3">
      {navItems.slice(3).map((item) => (
        <li>
          <a
            href={item.href}
            class={`flex items-center gap-3 px-3 py-2.5 rounded-lg transition-colors ${
              currentPage === item.id
                ? 'bg-accent-500 text-white'
                : 'text-base-300 hover:bg-base-800 hover:text-white'
            }`}
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" set:html={icons[item.icon]} />
            <span class="font-medium">{item.label}</span>
          </a>
        </li>
      ))}
    </ul>
  </div>

  <!-- Footer -->
  <div class="p-4 border-t border-base-700">
    <div class="flex items-center justify-between">
      <a
        href="/"
        class="text-sm text-base-400 hover:text-white transition-colors flex items-center gap-2"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to site
      </a>
      <a
        href="/admin/logout"
        class="text-sm text-red-400 hover:text-red-300 transition-colors"
      >
        Logout
      </a>
    </div>
  </div>
</nav>
