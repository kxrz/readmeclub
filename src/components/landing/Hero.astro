---
// Fundation
import Text from "../fundations/elements/Text.astro";
import Wrapper from "../fundations/containers/Wrapper.astro";
import { useTranslations, getLangFromUrl } from '@/i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="relative overflow-hidden">
  <Wrapper variant="hero" class="relative">
    <div class="w-full max-w-[75%] mx-auto">
      <Text tag="h1" variant="display6XL" class="text-base-900 font-bold leading-none">
        {t('site.name')}
      </Text>
      <Text tag="p" variant="textLG" class="mt-6 text-base-700 text-balance">
        {t('site.tagline')}
      </Text>
      <Text tag="p" variant="textBase" class="mt-2 text-base-600 text-balance">
        {t('site.description')}
      </Text>
      <div class="mt-4 pt-4 border-t border-base-200">
        <Text tag="p" variant="textSM" class="text-base-500 italic">
          {t('site.also_known_as')}
        </Text>
      </div>
    </div>
  </Wrapper>
</section>
