---
import Text from "@/components/fundations/elements/Text.astro";
import type { Resource } from '@/lib/supabase/schema';
import { useTranslations, getLangFromUrl, getLangPrefix } from '@/i18n/utils';
import { stripMarkdown } from '@/lib/utils/markdown';
import { getGradientForId } from '@/lib/utils/gradients';

interface Props {
  resource: Resource;
}

const { resource } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const langPrefix = getLangPrefix(lang);

const resourceUrl = langPrefix ? `${langPrefix}/resources/${resource.id}` : `/resources/${resource.id}`;
const thumbnailUrl = resource.thumbnail_url || `/api/resources/${resource.id}/og-image.png`;

// Nettoyer le markdown pour l'affichage
const cleanDescription = stripMarkdown(resource.description);

// Générer un gradient unique pour cette ressource
const gradient = getGradientForId(resource.id);
const gradientStyle = `background: linear-gradient(135deg, ${gradient.from} 0%, ${gradient.to} 100%);`;
const textColorStyle = `color: ${gradient.text};`;

// Formater la date
const createdDate = new Date(resource.created_at);
const formattedDate = createdDate.toLocaleDateString(
  lang === 'en' ? 'en-US' : lang === 'fr' ? 'fr-FR' : lang === 'es' ? 'es-ES' : lang === 'ru' ? 'ru-RU' : 'zh-CN',
  {
    year: 'numeric',
    month: 'short',
    day: 'numeric'
  }
);
---

<a
  href={resourceUrl}
  class="group relative flex items-start gap-4 p-4 rounded-lg border border-base-200 dark:border-base-700 bg-base-50 dark:bg-base-100 dark:bg-base-200 hover:border-accent-300 dark:hover:border-accent-500 hover:shadow-md transition-all"
>
  <div class="flex-shrink-0 relative">
    {resource.thumbnail_url ? (
      <>
        <img
          src={thumbnailUrl}
          alt={resource.title}
          class="w-16 h-16 rounded-lg object-cover"
          loading="lazy"
          onerror={`this.style.display='none'; this.nextElementSibling.style.display='flex';`}
        />
        <div class="w-16 h-16 rounded-lg absolute inset-0 flex items-center justify-center" style={`display: none; ${gradientStyle}`}>
          <Text tag="span" variant="textXS" class="font-semibold px-2 text-center" style={textColorStyle}>
            {resource.title.substring(0, 2).toUpperCase()}
          </Text>
        </div>
      </>
    ) : (
      <div class="w-16 h-16 rounded-lg bg-base-100 dark:bg-base-200 dark:bg-base-800 flex items-center justify-center">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="text-base-400 dark:text-base-500"
        >
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
          <path d="M14 3v4a1 1 0 0 0 1 1h4"></path>
          <path d="M17 21h-10a2 2 0 0 1 -2 -2v-14a2 2 0 0 1 2 -2h7l5 5v11a2 2 0 0 1 -2 2z"></path>
        </svg>
      </div>
    )}
  </div>
  
  <div class="flex-1 min-w-0">
    <div class="flex items-start justify-between gap-2 mb-1">
      <Text tag="h3" variant="textSM" class="font-semibold text-base-900 dark:text-base-50 group-hover:text-accent-500 dark:group-hover:text-accent-400 dark:group-hover:text-accent-400 line-clamp-1">
        {resource.title}
      </Text>
      <span class="shrink-0 text-xs uppercase text-base-500 dark:text-base-400 bg-base-100 dark:bg-base-200 dark:bg-base-800 px-2 py-0.5 rounded">
        {t(`resources.type.${resource.type}`)}
      </span>
    </div>
    
    {cleanDescription && (
      <Text tag="p" variant="textXS" class="text-base-600 dark:text-base-400 line-clamp-2 mb-2">
        {cleanDescription}
      </Text>
    )}
    
    <div class="flex items-center gap-2 text-xs text-base-500 dark:text-base-400">
      <time datetime={createdDate.toISOString()}>
        {formattedDate}
      </time>
      {resource.downloads_count > 0 && (
        <>
          <span>•</span>
          <span>{t('resources.downloads', { count: resource.downloads_count })}</span>
        </>
      )}
    </div>
  </div>
</a>









