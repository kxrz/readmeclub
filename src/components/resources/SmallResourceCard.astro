---
import Text from "@/components/fundations/elements/Text.astro";
import type { Resource } from '@/lib/supabase/schema';
import { useTranslations, getLangFromUrl, getLangPrefix } from '@/i18n/utils';
import { stripMarkdown } from '@/lib/utils/markdown';
import { getGradientForId } from '@/lib/utils/gradients';

interface Props {
  resource: Resource;
}

const { resource } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const langPrefix = getLangPrefix(lang);

const resourceUrl = langPrefix ? `${langPrefix}/resources/${resource.id}` : `/resources/${resource.id}`;
const thumbnailUrl = resource.thumbnail_url || `/api/resources/${resource.id}/og-image.png`;

// Nettoyer le markdown pour l'affichage dans la carte
const cleanDescription = stripMarkdown(resource.description);

// Générer un gradient unique pour cette ressource
const gradient = getGradientForId(resource.id);
const gradientStyle = `background: linear-gradient(135deg, ${gradient.from} 0%, ${gradient.to} 100%);`;
const textColorStyle = `color: ${gradient.text};`;
---

<a
  href={resourceUrl}
  title={resource.title}
  class="relative flex items-center gap-x-3 rounded-md bg-base-50 dark:bg-base-100 dark:bg-base-200 p-4 focus-outline-none"
>
  <div
    class="flex-shrink-0 p-1 size-16 bg-base-50 dark:bg-base-200 rounded-full items-center flex justify-center relative"
  >
    {resource.thumbnail_url ? (
      <>
        <img
          src={thumbnailUrl}
          alt={resource.title}
          class="object-cover size-10 rounded-full"
          loading="lazy"
          onerror={`this.style.display='none'; this.nextElementSibling.style.display='flex';`}
        />
        <div class="size-10 rounded-full absolute inset-0 m-auto flex items-center justify-center" style={`display: none; ${gradientStyle}`}>
          <Text tag="span" variant="textXS" class="font-semibold" style={textColorStyle}>
            {resource.title.substring(0, 2).toUpperCase()}
          </Text>
        </div>
      </>
    ) : (
      <div class="size-10 rounded-full bg-base-200 dark:bg-base-700 flex items-center justify-center">
        <Text tag="span" variant="textXS" class="font-semibold text-base-600 dark:text-base-400 dark:text-base-300">
          {resource.title.substring(0, 2).toUpperCase()}
        </Text>
      </div>
    )}
  </div>
  <div class="min-w-0 flex-1">
    <span class="absolute inset-0" aria-hidden="true"></span>
    <div>
      <Text tag="h3" variant="textSM" class="font-medium text-base-900 dark:text-base-50">
        {resource.title}
      </Text>
      <Text tag="p" variant="textXS" class="text-base-600 dark:text-base-400 mt-1 line-clamp-1">
        {cleanDescription.length > 35 ? cleanDescription.substring(0, 35).trim() + '...' : cleanDescription}
      </Text>
    </div>
  </div>
</a>
