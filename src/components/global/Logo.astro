---
import Text from "@/components/fundations/elements/Text.astro";
import { useTranslations, getLangFromUrl } from '@/i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Text
  tag="a"
  href="/"
  variant="textBase"
  class="inline-flex items-center font-bold text-base-900 dark:text-base-50 lowercase gap-3 group-hover:opacity-80 transition-colors duration-200"
>
  {t('site.name_lower')}
</Text>
