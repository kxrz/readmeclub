---
export const prerender = true;

import BaseLayout from "@/layouts/BaseLayout.astro";
import { Fragment } from "astro/jsx-runtime";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import Seo from "@/components/fundations/head/Seo.astro";
import Link from "@/components/fundations/components/Link.astro";
import { normalizeSiteUrl } from '@/lib/utils/url';
import { loadAllNewsArticles } from '@/lib/utils/news-loader';
import { renderMarkdown } from '@/lib/utils/markdown';

const siteUrl = normalizeSiteUrl(Astro.site);

// Charger les 4 news existantes pour le SEO
const allNews = await loadAllNewsArticles();
const news = allNews.slice(0, 4);

// Pré-rendre le HTML markdown pour chaque article
const newsWithHtml = news.map((article) => ({
  ...article,
  htmlContent: renderMarkdown(article.content),
}));
---

<BaseLayout>
  <Fragment slot="head">
    <Seo
      title="News - readme.club"
      description="Latest updates and discussions from the Xteink community"
      canonical={`${siteUrl}/news`}
      lang="en"
    />
  </Fragment>

  <section>
    <Wrapper variant="hero">
      <Text
        tag="h1"
        variant="displaySM"
        class="text-base-900 font-medium 2xl:text-5xl tracking-tight"
      >
        News
      </Text>
      <Text
        tag="p"
        variant="textBase"
        class="mt-4 text-base-600 text-balance 2xl:text-xl"
      >
        For the latest updates and discussions, join us on Reddit or Discord
      </Text>
    </Wrapper>
  </section>

  <section>
    <Wrapper variant="standard" class="py-6 pb-24">
      <div class="max-w-2xl mx-auto space-y-8">
        {/* Message principal */}
        <div class="bg-base-50 border border-base-200 rounded-lg p-6 text-center">
          <Text tag="h2" variant="textBase" class="font-semibold text-base-900 mb-3">
            Join the Community
          </Text>
          <Text tag="p" variant="textSM" class="text-base-600 mb-4">
            For real-time updates, discussions, and community support, visit us on:
          </Text>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <Link
              href="https://www.reddit.com/r/xteinkereader"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center px-6 py-3 bg-accent-500 text-white rounded-lg hover:bg-accent-600 transition-colors"
            >
              Reddit Community
            </Link>
            <Link
              href="https://discord.gg/xteink"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center px-6 py-3 bg-base-900 text-white rounded-lg hover:bg-base-800 transition-colors"
            >
              Discord Server
            </Link>
          </div>
        </div>

        {/* Liste des 4 news existantes avec accordéons pour le SEO */}
        {newsWithHtml.length > 0 && (
          <div>
            <Text tag="h2" variant="textBase" class="font-semibold text-base-900 mb-4">
              Archived News Articles
            </Text>
            <div class="space-y-4">
              {newsWithHtml.map((article) => (
                <article class="border border-base-200 rounded-lg overflow-hidden">
                  <details class="group cursor-pointer">
                    <summary class="p-4 text-base-900 font-semibold flex items-center justify-between w-full text-left select-none hover:text-accent-500 focus:text-accent-500">
                      <div class="flex-1">
                        <Text tag="h3" variant="textSM" class="font-semibold text-base-900 mb-2">
                          {article.title}
                        </Text>
                        {article.excerpt && (
                          <Text tag="p" variant="textXS" class="text-base-600 line-clamp-2 mb-2">
                            {article.excerpt}
                          </Text>
                        )}
                        {article.published_at && (
                          <Text tag="p" variant="textXS" class="text-base-500">
                            {article.published_at}
                          </Text>
                        )}
                      </div>
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="icon icon-tabler icons-tabler-outline icon-tabler-plus size-5 ml-4 flex-shrink-0 duration-300 ease-out transform group-open:-rotate-45"
                      >
                        <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                        <path d="M12 5l0 14" />
                        <path d="M5 12l14 0" />
                      </svg>
                    </summary>
                    <div class="px-4 pb-4 pt-0 border-t border-base-200">
                      {article.featured_image && (
                        <div class="mb-6 rounded-lg overflow-hidden">
                          <img
                            src={article.featured_image}
                            alt={article.title}
                            class="w-full h-auto"
                            loading="lazy"
                          />
                        </div>
                      )}
                      <div class="flex items-center gap-4 mb-4 text-sm text-base-600">
                        {article.author_name && (
                          <span>By {article.author_name}</span>
                        )}
                        {article.published_at && (
                          <time datetime={article.published_at}>{article.published_at}</time>
                        )}
                      </div>
                      <div class="prose prose-sm max-w-none text-base-600">
                        <div set:html={article.htmlContent} />
                      </div>
                    </div>
                  </details>
                </article>
              ))}
            </div>
          </div>
        )}
      </div>
    </Wrapper>
  </section>
</BaseLayout>
