---
export const prerender = true;

import BaseLayout from "@/layouts/BaseLayout.astro";
import { Fragment } from "astro/jsx-runtime";
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/components/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import Seo from "@/components/fundations/head/Seo.astro";
import { useTranslations, getLangFromUrl, getLangPrefix } from '@/i18n/utils';
import { loadGuideContent, addIdsToRenderedHtml } from '@/lib/utils/guide-loader';
import { renderMarkdown } from '@/lib/utils/markdown';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const langPrefix = getLangPrefix(lang);
const siteUrl = Astro.site || 'https://readme.club';

// Charger le contenu markdown du guide avec table des matières
const { content: guideMarkdown, tableOfContents } = await loadGuideContent();

// Convertir le markdown en HTML et ajouter les IDs aux titres
let guideContent = '';
if (guideMarkdown) {
  const htmlFromMarkdown = renderMarkdown(guideMarkdown);
  // Ajouter les IDs aux titres pour la navigation
  guideContent = addIdsToRenderedHtml(htmlFromMarkdown, tableOfContents);
}
---

<BaseLayout>
  <Fragment slot="head">
    <Seo
      title={t('guide.title')}
      description={t('guide.subtitle')}
      canonical={`${siteUrl}${langPrefix}/guide`}
      lang={lang}
    />
  </Fragment>

  <section>
    <Wrapper variant="hero">
      <div class="max-w-4xl mx-auto text-center">
        <Text
          tag="h1"
          variant="displaySM"
          class="text-base-900 font-medium 2xl:text-5xl tracking-tight"
        >
          {t('guide.title')}
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="mt-4 text-base-600 text-balance 2xl:text-xl max-w-2xl mx-auto"
        >
          {t('guide.subtitle')}
        </Text>
        <div class="mt-8 flex flex-col sm:flex-row items-center justify-center gap-4">
          <Text tag="p" variant="textSM" class="text-base-600">
            Read online below or download:
          </Text>
          <div class="flex gap-3">
            <a
              href="/api/guide/pdf-v2-download"
              class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-base-700 bg-base-100 border border-base-300 rounded-lg hover:bg-base-200 hover:border-accent-300 transition-colors"
              title={t('guide.download_pdf')}
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
              </svg>
              PDF
            </a>
            <a
              href="/api/guide/epub-v2-download"
              class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium text-base-700 bg-base-100 border border-base-300 rounded-lg hover:bg-base-200 hover:border-accent-300 transition-colors"
              title={t('guide.download_epub')}
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
              EPUB
            </a>
          </div>
        </div>
      </div>
    </Wrapper>
  </section>

  <!-- Guide Content Section -->
  {guideContent && (
    <section>
      <Wrapper variant="standard" class="py-6 pb-24">
        <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
          {/* Table des matières - Sidebar (desktop) */}
          {tableOfContents.length > 0 && (
            <aside class="lg:col-span-1 hidden lg:block">
              <div class="sticky top-24">
                <div class="bg-base-50 rounded-lg p-6 border border-base-200 shadow-sm">
                  <Text
                    tag="h2"
                    variant="textSM"
                    class="font-semibold text-base-900 mb-4 uppercase tracking-wide"
                  >
                    Table of Contents
                  </Text>
                  <nav class="space-y-2 max-h-[calc(100vh-200px)] overflow-y-auto pr-2 scrollbar-thin scrollbar-thumb-base-300 scrollbar-track-transparent">
                    {tableOfContents.map((item) => (
                      <div class="space-y-1">
                        <a
                          href={`#${item.id}`}
                          class="block text-sm text-base-700 hover:text-accent-500 transition-colors py-1.5 px-2 rounded hover:bg-base-100 font-medium"
                        >
                          {item.title}
                        </a>
                        {item.children && item.children.length > 0 && (
                          <div class="ml-2 space-y-0.5 border-l-2 border-base-200 pl-3">
                            {item.children.map((child) => (
                              <a
                                href={`#${child.id}`}
                                class="block text-xs text-base-600 hover:text-accent-500 transition-colors py-1 px-2 rounded hover:bg-base-100"
                              >
                                {child.title}
                              </a>
                            ))}
                          </div>
                        )}
                      </div>
                    ))}
                  </nav>
                </div>
              </div>
            </aside>
          )}

          {/* Contenu principal */}
          <div class="lg:col-span-3">
            <div class="prose prose-lg max-w-none prose-headings:text-base-900 prose-headings:font-semibold prose-headings:scroll-mt-24 prose-h2:text-2xl prose-h2:mt-12 prose-h2:mb-6 prose-h2:pb-2 prose-h2:border-b prose-h2:border-base-200 prose-h3:text-xl prose-h3:mt-8 prose-h3:mb-4 prose-p:text-base-700 prose-p:leading-relaxed prose-a:text-accent-500 prose-a:no-underline hover:prose-a:underline prose-strong:text-base-900 prose-ul:text-base-700 prose-ol:text-base-700 prose-li:text-base-700 prose-li:my-2 prose-code:text-base-900 prose-code:bg-base-100 prose-code:px-1.5 prose-code:py-0.5 prose-code:rounded prose-code:text-sm prose-pre:bg-base-900 prose-pre:text-base-50 prose-pre:rounded-lg prose-pre:p-4 prose-blockquote:border-l-4 prose-blockquote:border-accent-500 prose-blockquote:pl-4 prose-blockquote:italic prose-blockquote:text-base-600">
              <div set:html={guideContent} />
            </div>
          </div>
        </div>
      </Wrapper>
    </section>
  )}


</BaseLayout>
