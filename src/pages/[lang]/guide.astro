---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/components/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import Seo from "@/components/fundations/head/Seo.astro";
import { useTranslations, getLangFromUrl } from '@/i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout>
  <Seo
    title={t('guide.title')}
    description={t('guide.subtitle')}
    canonical={`${Astro.site}/${lang}/guide`}
    lang={lang}
  />

  <section>
    <Wrapper variant="hero">
      <div class="flex flex-col md:flex-row items-center gap-8">
        <div class="flex-1">
          <Text
            tag="h1"
            variant="displaySM"
            class="text-base-900 font-medium 2xl:text-5xl tracking-tight"
          >
            {t('guide.title')}
          </Text>
          <Text
            tag="p"
            variant="textBase"
            class="mt-4 text-base-600 text-balance 2xl:text-xl"
          >
            {t('guide.subtitle')}
          </Text>
        </div>
        <div class="flex-1 max-w-md">
          <img 
            src="https://preview.redd.it/xteink-community-hub-is-growing-fast-new-features-stats-v0-sgwuqcs39t1g1.jpg?width=1080&crop=smart&auto=webp&s=75e29679e9b1056a98cd51e067cd625cfdc41a2b"
            alt="Xteink Community Hub Statistics"
            class="w-full rounded-lg border-2 border-base-200 shadow-lg"
            loading="eager"
          />
        </div>
      </div>
    </Wrapper>
  </section>

  <!-- Download Section -->
  <section>
    <Wrapper variant="standard" class="py-6 pb-24">
      <div class="max-w-4xl mx-auto">
        <Text tag="h2" variant="textXL" class="font-semibold text-base-900 mb-8 text-center">
          {t('guide.download_pdf')} & {t('guide.download_epub')}
        </Text>
        
        <div class="grid md:grid-cols-2 gap-6 mb-12">
          <!-- PDF Card -->
          <div class="bg-gradient-to-br from-base-50 to-base-100 rounded-lg p-8 border-2 border-base-200 hover:border-accent-300 transition-colors">
            <div class="flex items-center gap-4 mb-4">
              <div class="w-12 h-12 bg-accent-500 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <Text tag="h3" variant="textLG" class="font-semibold text-base-900">
                  {t('guide.download_pdf')}
                </Text>
                <Text tag="p" variant="textSM" class="text-base-600">
                  {t('guide.pdf_description')}
                </Text>
              </div>
            </div>
            <Text tag="p" variant="textSM" class="text-base-600 mb-6">
              {t('guide.pdf_description_full')}
            </Text>
            <a href="/api/guide/pdf-v2-download" class="block">
              <Button variant="accent" size="lg" class="w-full">
                {t('guide.download_pdf')}
              </Button>
            </a>
          </div>

          <!-- ePub Card -->
          <div class="bg-gradient-to-br from-base-50 to-base-100 rounded-lg p-8 border-2 border-base-200 hover:border-accent-300 transition-colors">
            <div class="flex items-center gap-4 mb-4">
              <div class="w-12 h-12 bg-accent-500 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                </svg>
              </div>
              <div>
                <Text tag="h3" variant="textLG" class="font-semibold text-base-900">
                  {t('guide.download_epub')}
                </Text>
                <Text tag="p" variant="textSM" class="text-base-600">
                  {t('guide.epub_description')}
                </Text>
              </div>
            </div>
            <Text tag="p" variant="textSM" class="text-base-600 mb-6">
              {t('guide.epub_description_full')}
            </Text>
            <a href="/api/guide/epub-v2-download" class="block">
              <Button variant="default" size="lg" class="w-full">
                {t('guide.download_epub')}
              </Button>
            </a>
          </div>
        </div>

        <!-- What's Inside Section -->
        <div class="bg-base-50 rounded-lg p-8 border border-base-200">
          <Text tag="h3" variant="textXL" class="font-semibold text-base-900 mb-6 flex items-center gap-2">
            <span class="text-2xl">ðŸ“–</span>
            {t('guide.whats_inside')}
          </Text>
          <div class="grid md:grid-cols-2 gap-4">
            <div class="flex items-start gap-3">
              <span class="text-accent-600 font-bold text-lg">âœ“</span>
              <Text tag="p" variant="textBase" class="text-base-700">
                {t('guide.tips_count')}
              </Text>
            </div>
            <div class="flex items-start gap-3">
              <span class="text-accent-600 font-bold text-lg">âœ“</span>
              <Text tag="p" variant="textBase" class="text-base-700">
                {t('guide.setup')}
              </Text>
            </div>
            <div class="flex items-start gap-3">
              <span class="text-accent-600 font-bold text-lg">âœ“</span>
              <Text tag="p" variant="textBase" class="text-base-700">
                {t('guide.reading')}
              </Text>
            </div>
            <div class="flex items-start gap-3">
              <span class="text-accent-600 font-bold text-lg">âœ“</span>
              <Text tag="p" variant="textBase" class="text-base-700">
                {t('guide.troubleshooting')}
              </Text>
            </div>
            <div class="flex items-start gap-3">
              <span class="text-accent-600 font-bold text-lg">âœ“</span>
              <Text tag="p" variant="textBase" class="text-base-700">
                {t('guide.advanced')}
              </Text>
            </div>
            <div class="flex items-start gap-3">
              <span class="text-accent-600 font-bold text-lg">âœ“</span>
              <Text tag="p" variant="textBase" class="text-base-700">
                {t('guide.best_practices')}
              </Text>
            </div>
          </div>
        </div>
      </div>
    </Wrapper>
  </section>
</BaseLayout>

