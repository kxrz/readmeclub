---
export const prerender = false; // Page avec paramètre [lang] dynamique, nécessite SSR

// Layout
import BaseLayout from "@/layouts/BaseLayout.astro";
// Fundation
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import Seo from "@/components/fundations/head/Seo.astro";
import { useTranslations } from '@/i18n/utils';
import type { Lang } from '@/i18n/utils';

const lang = (Astro.params.lang || 'en') as Lang;
const t = useTranslations(lang);
const siteUrl = Astro.site || 'https://readme.club';
---

<BaseLayout>
  <Fragment slot="head">
    <Seo
      title={`${t('disclaimer.title')} - ${t('site.name')}`}
      description={t('disclaimer.subtitle')}
      canonical={`${siteUrl}/${lang}/disclaimer`}
      lang={lang}
    />
  </Fragment>

  <section>
    <Wrapper variant="hero">
      <div class="flex items-start gap-3 mb-4">
        <div class="flex-shrink-0 w-10 h-10 bg-base-200 rounded-lg flex items-center justify-center">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="text-base-700"
          >
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path d="M12 9v4"></path>
            <path d="M10.363 3.591l-8.106 13.534a1.914 1.914 0 0 0 1.636 2.871h16.214a1.914 1.914 0 0 0 1.636 -2.87l-8.106 -13.536a1.914 1.914 0 0 0 -3.274 0z"></path>
            <path d="M12 16h.01"></path>
          </svg>
        </div>
        <div class="flex-1">
          <Text
            tag="h1"
            variant="displaySM"
            class="text-base-900 font-medium 2xl:text-5xl tracking-tight"
          >
            {t('disclaimer.title')}
          </Text>
          <Text
            tag="p"
            variant="textBase"
            class="mt-4 text-base-600 text-balance 2xl:text-xl"
          >
            {t('disclaimer.subtitle')}
          </Text>
        </div>
      </div>
    </Wrapper>
  </section>

  <section>
    <Wrapper variant="standard" class="py-6">
      <div class="max-w-3xl mx-auto prose prose-lg">
        <div class="space-y-8">
          <!-- Section 1 -->
          <div>
            <Text tag="h2" variant="textLG" class="text-base-900 font-bold mb-3">
              {t('disclaimer.section1.title')}
            </Text>
            <ul class="list-disc list-inside space-y-2 text-base-700">
              <li>{t('disclaimer.section1.point1')}</li>
              <li>{t('disclaimer.section1.point2')}</li>
            </ul>
          </div>

          <!-- Section 2 -->
          <div>
            <Text tag="h2" variant="textLG" class="text-base-900 font-bold mb-3">
              {t('disclaimer.section2.title')}
            </Text>
            <ul class="list-disc list-inside space-y-2 text-base-700">
              <li>{t('disclaimer.section2.point1')}</li>
              <li>{t('disclaimer.section2.point2')}</li>
              <li>{t('disclaimer.section2.point3')}</li>
            </ul>
          </div>

          <!-- Section 3 -->
          <div>
            <Text tag="h2" variant="textLG" class="text-base-900 font-bold mb-3">
              {t('disclaimer.section3.title')}
            </Text>
            <Text tag="p" variant="textBase" class="text-base-700 mb-3">
              {t('disclaimer.section3.intro')}
            </Text>
            <ul class="list-disc list-inside space-y-2 text-base-700">
              <li>{t('disclaimer.section3.point1')}</li>
              <li>{t('disclaimer.section3.point2')}</li>
              <li>{t('disclaimer.section3.point3')}</li>
              <li>{t('disclaimer.section3.point4')}</li>
            </ul>
            <Text tag="p" variant="textBase" class="text-base-700 mt-4 font-medium">
              {t('disclaimer.section3.warning')}
            </Text>
          </div>

          <!-- Section 4 -->
          <div>
            <Text tag="h2" variant="textLG" class="text-base-900 font-bold mb-3">
              {t('disclaimer.section4.title')}
            </Text>
            <Text tag="p" variant="textBase" class="text-base-700">
              {t('disclaimer.section4.content')}
            </Text>
          </div>

          <!-- Section 5 -->
          <div>
            <Text tag="h2" variant="textLG" class="text-base-900 font-bold mb-3">
              {t('disclaimer.section5.title')}
            </Text>
            <Text tag="p" variant="textBase" class="text-base-700 mb-3">
              {t('disclaimer.section5.content')}
            </Text>
            <Text tag="p" variant="textSM" class="text-base-600 italic">
              {t('disclaimer.section5.examples')}
            </Text>
          </div>

          <!-- Section 6 -->
          <div>
            <Text tag="h2" variant="textLG" class="text-base-900 font-bold mb-3">
              {t('disclaimer.section6.title')}
            </Text>
            <ul class="list-disc list-inside space-y-2 text-base-700">
              <li>{t('disclaimer.section6.point1')}</li>
              <li>{t('disclaimer.section6.point2')}</li>
              <li>{t('disclaimer.section6.point3')}</li>
            </ul>
          </div>

          <!-- Section 7 -->
          <div>
            <Text tag="h2" variant="textLG" class="text-base-900 font-bold mb-3">
              {t('disclaimer.section7.title')}
            </Text>
            <Text tag="p" variant="textBase" class="text-base-700">
              {t('disclaimer.section7.content')}
            </Text>
          </div>

          <!-- Section 8 -->
          <div>
            <Text tag="h2" variant="textLG" class="text-base-900 font-bold mb-3">
              {t('disclaimer.section8.title')}
            </Text>
            <Text tag="p" variant="textBase" class="text-base-700">
              {t('disclaimer.section8.content')}
            </Text>
          </div>

          <!-- Section 9 -->
          <div>
            <Text tag="h2" variant="textLG" class="text-base-900 font-bold mb-3">
              {t('disclaimer.section9.title')}
            </Text>
            <ul class="list-disc list-inside space-y-2 text-base-700">
              <li>{t('disclaimer.section9.point1')}</li>
              <li>{t('disclaimer.section9.point2')}</li>
            </ul>
          </div>

          <!-- Final notice -->
          <div class="bg-base-50 border-l-4 border-base-900 p-6 rounded-r-lg mt-8">
            <Text tag="p" variant="textBase" class="text-base-900 font-medium">
              {t('disclaimer.final_notice')}
            </Text>
          </div>
        </div>
      </div>
    </Wrapper>
  </section>
</BaseLayout>

