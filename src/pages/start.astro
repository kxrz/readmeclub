  <section>
    <Wrapper variant="hero">
      <div class="max-w-4xl mx-auto text-center">
        <Text
          tag="h1"
          variant="displaySM"
          class="text-base-900 font-medium 2xl:text-5xl tracking-tight mb-4"
        >
          Xteink X4 ‚Äì Complete Beginner FAQ
        </Text>
        <Text
          tag="p"
          variant="textBase"
          class="text-base-600 text-xl mb-2"
        >
