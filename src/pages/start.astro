        <Text
          tag="p"
          variant="textSM"
          class="text-base-500"
        >
          Updated January 12, 2026
        </Text>
      </div>
    </Wrapper>
  </section>

  <section>
    <Wrapper variant="standard" class="py-6 pb-24">
      <div class="max-w-4xl mx-auto space-y-8">
        
