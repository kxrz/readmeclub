---
export const prerender = false;

import AdminLayout from "@/layouts/AdminLayout.astro";
import { checkAdminAuth } from '@/lib/utils/admin';
import { getSupabaseAdmin } from '@/lib/supabase/admin';

// Check admin auth
if (!checkAdminAuth(Astro.cookies)) {
  return Astro.redirect('/admin');
}

// Fetch all feature requests (including hidden)
const supabaseAdmin = getSupabaseAdmin();
const { data: features } = await supabaseAdmin
  .from('feature_requests')
  .select('*')
  .order('votes_count', { ascending: false });

// Stats
const pendingCount = features?.filter(f => f.admin_status === 'pending' || !f.admin_status).length || 0;
const plannedCount = features?.filter(f => f.admin_status === 'planned').length || 0;
const completedCount = features?.filter(f => f.admin_status === 'completed').length || 0;
const totalVotes = features?.reduce((sum, f) => sum + (f.votes_count || 0), 0) || 0;
---

<AdminLayout title="Feature Requests" currentPage="features">
  <!-- Stats -->
  <div class="grid grid-cols-1 md:grid-cols-5 gap-4 mb-8">
    <div class="bg-white border border-base-200 rounded-xl p-6">
      <div class="text-3xl font-bold text-base-900">{features?.length || 0}</div>
      <div class="text-sm text-base-600 mt-1">Total Requests</div>
    </div>
    <div class="bg-white border border-base-200 rounded-xl p-6">
      <div class="text-3xl font-bold text-yellow-500">{pendingCount}</div>
      <div class="text-sm text-base-600 mt-1">Pending Review</div>
    </div>
    <div class="bg-white border border-base-200 rounded-xl p-6">
      <div class="text-3xl font-bold text-blue-500">{plannedCount}</div>
      <div class="text-sm text-base-600 mt-1">Planned</div>
    </div>
    <div class="bg-white border border-base-200 rounded-xl p-6">
      <div class="text-3xl font-bold text-green-500">{completedCount}</div>
      <div class="text-sm text-base-600 mt-1">Completed</div>
    </div>
    <div class="bg-white border border-base-200 rounded-xl p-6">
      <div class="text-3xl font-bold text-accent-500">{totalVotes}</div>
      <div class="text-sm text-base-600 mt-1">Total Votes</div>
    </div>
  </div>

  <!-- Filters -->
  <div 
    x-data="{ filter: 'all', search: '' }"
    class="space-y-4"
  >
    <div class="flex items-center gap-4 flex-wrap">
      <div class="flex items-center gap-2 bg-white border border-base-200 rounded-lg p-1">
        <button
          @click="filter = 'all'"
          :class="filter === 'all' ? 'bg-base-900 text-white' : 'text-base-600 hover:bg-base-100'"
          class="px-4 py-2 rounded-md text-sm font-medium transition-colors"
        >
          All
        </button>
        <button
          @click="filter = 'pending'"
          :class="filter === 'pending' ? 'bg-yellow-500 text-white' : 'text-base-600 hover:bg-base-100'"
          class="px-4 py-2 rounded-md text-sm font-medium transition-colors"
        >
          Pending
        </button>
        <button
          @click="filter = 'planned'"
          :class="filter === 'planned' ? 'bg-blue-500 text-white' : 'text-base-600 hover:bg-base-100'"
          class="px-4 py-2 rounded-md text-sm font-medium transition-colors"
        >
          Planned
        </button>
        <button
          @click="filter = 'completed'"
          :class="filter === 'completed' ? 'bg-green-500 text-white' : 'text-base-600 hover:bg-base-100'"
          class="px-4 py-2 rounded-md text-sm font-medium transition-colors"
        >
          Completed
        </button>
      </div>
      
      <div class="flex-1"></div>
      
      <input
        type="text"
        x-model="search"
        placeholder="Search features..."
        class="px-4 py-2 border border-base-200 rounded-lg bg-white focus:ring-2 focus:ring-accent-500 focus:border-accent-500 outline-none w-64"
      />
    </div>

    <!-- Features List -->
    <div class="bg-white border border-base-200 rounded-xl overflow-hidden">
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-base-50 border-b border-base-200">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-semibold text-base-500 uppercase tracking-wider">Feature</th>
              <th class="px-6 py-3 text-center text-xs font-semibold text-base-500 uppercase tracking-wider">Votes</th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-base-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-right text-xs font-semibold text-base-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-base-200">
            {features && features.map((feature) => {
              const status = feature.admin_status || 'pending';
              return (
                <tr
                  class="hover:bg-base-50 transition-colors"
                  x-show={`(filter === 'all' || filter === '${status}') && ('${feature.title}'.toLowerCase().includes(search.toLowerCase()) || search === '')`}
                >
                  <td class="px-6 py-4">
                    <div>
                      <div class="font-medium text-base-900 flex items-center gap-2">
                        {feature.title}
                        {feature.hidden && <span class="text-xs bg-base-200 text-base-500 px-2 py-0.5 rounded">Hidden</span>}
                      </div>
                      {feature.description && (
                        <div class="text-sm text-base-500 mt-1 line-clamp-2">
                          {feature.description}
                        </div>
                      )}
                    </div>
                  </td>
                  <td class="px-6 py-4 text-center">
                    <span class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-accent-100 text-accent-700 font-bold text-lg">
                      {feature.votes_count || 0}
                    </span>
                  </td>
                  <td class="px-6 py-4">
                    <select
                      data-action="status"
                      data-id={feature.id}
                      class={`px-3 py-1.5 rounded-lg text-sm font-medium border-0 cursor-pointer ${
                        status === 'completed' ? 'bg-green-100 text-green-800' :
                        status === 'planned' ? 'bg-blue-100 text-blue-800' :
                        status === 'rejected' ? 'bg-red-100 text-red-800' :
                        'bg-yellow-100 text-yellow-800'
                      }`}
                    >
                      <option value="pending" selected={status === 'pending'}>Pending</option>
                      <option value="planned" selected={status === 'planned'}>Planned</option>
                      <option value="completed" selected={status === 'completed'}>Completed</option>
                      <option value="rejected" selected={status === 'rejected'}>Rejected</option>
                    </select>
                  </td>
                  <td class="px-6 py-4 text-right">
                    <div class="flex items-center justify-end gap-2">
                      <button
                        data-action="hide"
                        data-id={feature.id}
                        class={`p-2 rounded-lg transition-colors ${feature.hidden ? 'text-base-900 bg-base-200' : 'text-base-400 hover:text-base-600 hover:bg-base-100'}`}
                        title={feature.hidden ? 'Show' : 'Hide'}
                      >
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                        </svg>
                      </button>
                      <button
                        data-action="delete"
                        data-id={feature.id}
                        class="p-2 text-base-400 hover:text-red-500 hover:bg-red-50 rounded-lg transition-colors"
                        title="Delete"
                      >
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                      </button>
                    </div>
                  </td>
                </tr>
              );
            })}
          </tbody>
        </table>
      </div>
      
      {(!features || features.length === 0) && (
        <div class="text-center py-12 text-base-500">
          No feature requests found
        </div>
      )}
    </div>
  </div>
</AdminLayout>

<script>
  // Handle status changes
  document.querySelectorAll('select[data-action="status"]').forEach(select => {
    select.addEventListener('change', async (e) => {
      const target = e.target as HTMLSelectElement;
      const id = target.dataset.id;
      const status = target.value;
      
      try {
        const res = await fetch(`/api/admin/features/${id}/status`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ status })
        });
        
        if (res.ok) {
          window.location.reload();
        } else {
          const error = await res.json();
          alert(error.error || 'Failed to update status');
        }
      } catch (error) {
        console.error('Status update error:', error);
        alert('An error occurred');
      }
    });
  });
  
  // Handle button actions
  document.querySelectorAll('button[data-action]').forEach(btn => {
    btn.addEventListener('click', async (e) => {
      const button = e.currentTarget as HTMLButtonElement;
      const action = button.dataset.action;
      const id = button.dataset.id;
      
      if (!action || !id) return;
      
      try {
        let endpoint = '';
        
        switch (action) {
          case 'hide':
            endpoint = `/api/admin/features/${id}/hide`;
            break;
          case 'delete':
            if (!confirm('Are you sure you want to delete this feature request?')) return;
            endpoint = `/api/admin/features/${id}/delete`;
            break;
        }
        
        const res = await fetch(endpoint, { method: 'POST' });
        
        if (res.ok) {
          window.location.reload();
        } else {
          const error = await res.json();
          alert(error.error || 'Action failed');
        }
      } catch (error) {
        console.error('Action error:', error);
        alert('An error occurred');
      }
    });
  });
</script>
