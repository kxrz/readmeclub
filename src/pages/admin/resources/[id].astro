---
export const prerender = false;

import AdminLayout from "@/layouts/AdminLayout.astro";
import { checkAdminAuth } from '@/lib/utils/admin';
import { getSupabaseAdmin } from '@/lib/supabase/admin';

// Check admin auth
if (!checkAdminAuth(Astro.cookies)) {
  return Astro.redirect('/admin');
}

const id = Astro.params.id;

if (!id) {
  return Astro.redirect('/admin/resources');
}

// Fetch resource
const supabaseAdmin = getSupabaseAdmin();
const { data: resource, error } = await supabaseAdmin
  .from('resources')
  .select('*')
  .eq('id', id)
  .single();

if (error || !resource) {
  return Astro.redirect('/admin/resources');
}

// Resource types
const resourceTypes = ['tool', 'firmware', 'guide', 'font', 'template', 'other'];
---

<AdminLayout title="Edit Resource" currentPage="resources">
  <script type="application/json" id="resource-data" set:html={JSON.stringify({
    id: resource.id,
    title: resource.title || '',
    description: resource.description || '',
    type: resource.type || 'tool',
    external_link: resource.external_link || '',
    github_url: resource.github_url || '',
    status: resource.status || 'pending',
    starred: resource.starred || false,
    hidden: resource.hidden || false
  })}></script>

  <div x-data="editResource()" class="max-w-4xl">
    <!-- Header -->
    <div class="flex items-center justify-between mb-6">
      <div class="flex items-center gap-4">
        <a href="/admin/resources" class="text-base-500 hover:text-base-700">
          ← Back
        </a>
        <h2 class="text-lg font-medium text-base-900" x-text="resource.title || 'Edit Resource'"></h2>
        <span :class="{
          'bg-green-100 text-green-800': resource.status === 'approved',
          'bg-yellow-100 text-yellow-800': resource.status === 'pending',
          'bg-red-100 text-red-800': resource.status === 'rejected'
        }" class="px-2 py-0.5 rounded-full text-xs font-medium" x-text="resource.status"></span>
      </div>
      <a
        href={`/resources/${resource.id}`}
        target="_blank"
        class="px-3 py-1.5 text-base-600 hover:bg-base-100 rounded-lg text-sm"
      >
        View →
      </a>
    </div>
    
    <!-- Form -->
    <form @submit.prevent="updateResource()" class="bg-white border border-base-200 rounded-xl">
      <div class="p-6 space-y-4">
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-base-700 mb-1">Title *</label>
            <input
              type="text"
              x-model="resource.title"
              required
              class="w-full px-3 py-2 border border-base-200 rounded-lg focus:ring-2 focus:ring-accent-500 focus:border-accent-500 outline-none"
            />
          </div>
          <div>
            <label class="block text-sm font-medium text-base-700 mb-1">Type *</label>
            <select
              x-model="resource.type"
              required
              class="w-full px-3 py-2 border border-base-200 rounded-lg focus:ring-2 focus:ring-accent-500 focus:border-accent-500 outline-none"
            >
              {resourceTypes.map(type => (
                <option value={type}>{type}</option>
              ))}
            </select>
          </div>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-base-700 mb-1">Description *</label>
          <textarea
            x-model="resource.description"
            required
            rows="4"
            placeholder="Describe the resource..."
            class="w-full px-3 py-2 border border-base-200 rounded-lg focus:ring-2 focus:ring-accent-500 focus:border-accent-500 outline-none"
          ></textarea>
        </div>
        
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-base-700 mb-1">External Link</label>
            <input
              type="url"
              x-model="resource.external_link"
              placeholder="https://..."
              class="w-full px-3 py-2 border border-base-200 rounded-lg focus:ring-2 focus:ring-accent-500 focus:border-accent-500 outline-none"
            />
          </div>
          <div>
            <label class="block text-sm font-medium text-base-700 mb-1">GitHub URL</label>
            <input
              type="url"
              x-model="resource.github_url"
              placeholder="https://github.com/..."
              class="w-full px-3 py-2 border border-base-200 rounded-lg focus:ring-2 focus:ring-accent-500 focus:border-accent-500 outline-none"
            />
          </div>
        </div>
        
        <div class="grid grid-cols-3 gap-4">
          <div>
            <label class="block text-sm font-medium text-base-700 mb-1">Status</label>
            <select
              x-model="resource.status"
              class="w-full px-3 py-2 border border-base-200 rounded-lg focus:ring-2 focus:ring-accent-500 focus:border-accent-500 outline-none"
            >
              <option value="pending">Pending</option>
              <option value="approved">Approved</option>
              <option value="rejected">Rejected</option>
            </select>
          </div>
          <div class="flex items-center pt-6">
            <label class="flex items-center gap-2">
              <input type="checkbox" x-model="resource.starred" class="w-4 h-4 text-accent-500 rounded" />
              <span class="text-sm text-base-700">⭐ Starred</span>
            </label>
          </div>
          <div class="flex items-center pt-6">
            <label class="flex items-center gap-2">
              <input type="checkbox" x-model="resource.hidden" class="w-4 h-4 text-accent-500 rounded" />
              <span class="text-sm text-base-700">Hidden</span>
            </label>
          </div>
        </div>
      </div>
      
      <!-- Footer -->
      <div class="p-4 border-t border-base-200 flex items-center justify-between">
        <div>
          <span x-show="error" class="text-red-600 text-sm" x-text="error"></span>
          <span x-show="success" class="text-green-600 text-sm">Resource updated!</span>
        </div>
        <div class="flex items-center gap-3">
          <a href="/admin/resources" class="px-4 py-2 text-base-600 hover:text-base-900 transition-colors">
            Cancel
          </a>
          <button
            type="submit"
            :disabled="submitting"
            class="px-6 py-2 bg-accent-500 text-white rounded-lg hover:bg-accent-600 transition-colors font-medium disabled:opacity-50"
          >
            <span x-show="!submitting">Save Changes</span>
            <span x-show="submitting">Saving...</span>
          </button>
        </div>
      </div>
    </form>
  </div>
</AdminLayout>

<script is:inline>
  function editResource() {
    const dataEl = document.getElementById('resource-data');
    const _data = dataEl ? JSON.parse(dataEl.textContent) : {};
    
    return {
      submitting: false,
      error: null,
      success: false,
      resource: _data,
      
      async updateResource() {
        this.submitting = true;
        this.error = null;
        this.success = false;
        
        try {
          const res = await fetch('/api/admin/resources/' + this.resource.id + '/update', {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(this.resource)
          });
          
          if (!res.ok) {
            const err = await res.json();
            throw new Error(err.error || 'Failed to update');
          }
          
          this.success = true;
          setTimeout(() => this.success = false, 3000);
        } catch (err) {
          this.error = err.message;
        } finally {
          this.submitting = false;
        }
      }
    };
  }
</script>
