---
export const prerender = false;

import AdminLayout from "@/layouts/AdminLayout.astro";
import { checkAdminAuth } from '@/lib/utils/admin';
import { getSupabaseAdmin } from '@/lib/supabase/admin';

// Check admin auth
if (!checkAdminAuth(Astro.cookies)) {
  return Astro.redirect('/admin');
}

const id = Astro.params.id;

if (!id) {
  return Astro.redirect('/admin/news');
}

// Fetch article
const supabaseAdmin = getSupabaseAdmin();
const { data: article, error } = await supabaseAdmin
  .from('news')
  .select('*')
  .eq('id', id)
  .single();

if (error || !article) {
  return Astro.redirect('/admin/news');
}

// Format published_at for datetime-local input
const publishedAtFormatted = article.published_at 
  ? new Date(article.published_at).toISOString().slice(0, 16)
  : '';
---

<AdminLayout title="Edit Article" currentPage="news">
  <script type="application/json" id="article-data" set:html={JSON.stringify({
    title: article.title || '',
    slug: article.slug || '',
    excerpt: article.excerpt || '',
    content: article.content || '',
    featured_image_url: article.featured_image_url || '',
    author_name: article.author_name || '',
    status: article.status || 'draft',
    published_at: publishedAtFormatted || '',
    featured: article.featured || false,
    hidden: article.hidden || false,
    id: id
  })}></script>
  
  <div x-data="editNews()" class="h-[calc(100vh-140px)] flex flex-col">
    <!-- Header -->
    <div class="flex items-center justify-between mb-4 shrink-0">
      <div class="flex items-center gap-4">
        <a href="/admin/news" class="text-base-500 hover:text-base-700">
          ← Back
        </a>
        <h2 class="text-lg font-medium text-base-900">{article.title}</h2>
        <span class={`px-2 py-0.5 rounded-full text-xs font-medium ${
          article.status === 'published' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800'
        }`}>
          {article.status}
        </span>
      </div>
      <div class="flex items-center gap-2">
        <a
          href={`/news/${article.slug}`}
          target="_blank"
          class="px-3 py-1.5 text-base-600 hover:bg-base-100 rounded-lg text-sm"
        >
          View →
        </a>
        <button 
          type="button"
          @click="previewMode = !previewMode"
          :class="previewMode ? 'bg-accent-100 text-accent-600' : 'text-base-600 hover:bg-base-100'"
          class="px-3 py-1.5 rounded-lg text-sm font-medium transition-colors"
        >
          Preview
        </button>
      </div>
    </div>
    
    <!-- Form -->
    <form @submit.prevent="updateArticle()" class="flex-1 flex flex-col overflow-hidden bg-white border border-base-200 rounded-xl">
      <div class="flex-1 flex overflow-hidden">
        <!-- Left: Form -->
        <div class="flex-1 p-6 overflow-y-auto space-y-4" :class="previewMode ? 'w-1/2 border-r border-base-200' : 'w-full'">
          <div class="grid grid-cols-2 gap-4">
            <div>
              <label class="block text-sm font-medium text-base-700 mb-1">Title *</label>
              <input
                type="text"
                x-model="article.title"
                required
                class="w-full px-3 py-2 border border-base-200 rounded-lg focus:ring-2 focus:ring-accent-500 focus:border-accent-500 outline-none"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-base-700 mb-1">Slug *</label>
              <input
                type="text"
                x-model="article.slug"
                required
                class="w-full px-3 py-2 border border-base-200 rounded-lg focus:ring-2 focus:ring-accent-500 focus:border-accent-500 outline-none font-mono text-sm"
              />
            </div>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-base-700 mb-1">Excerpt</label>
            <input
              type="text"
              x-model="article.excerpt"
              placeholder="Short description for previews..."
              class="w-full px-3 py-2 border border-base-200 rounded-lg focus:ring-2 focus:ring-accent-500 focus:border-accent-500 outline-none"
            />
          </div>
          
          <!-- Markdown Toolbar -->
          <div>
            <div class="flex items-center justify-between mb-1">
              <label class="block text-sm font-medium text-base-700">Content (Markdown) *</label>
              <div class="flex items-center gap-1">
                <button type="button" @click="insertMarkdown('**', '**')" class="p-1.5 text-base-500 hover:bg-base-100 rounded" title="Bold">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 4h8a4 4 0 014 4 4 4 0 01-4 4H6z M6 12h9a4 4 0 014 4 4 4 0 01-4 4H6z"/></svg>
                </button>
                <button type="button" @click="insertMarkdown('*', '*')" class="p-1.5 text-base-500 hover:bg-base-100 rounded" title="Italic">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 4h4 M14 4l-4 16 M6 20h4"/></svg>
                </button>
                <button type="button" @click="insertMarkdown('[', '](url)')" class="p-1.5 text-base-500 hover:bg-base-100 rounded" title="Link">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/></svg>
                </button>
                <button type="button" @click="insertMarkdown('## ', '')" class="p-1.5 text-base-500 hover:bg-base-100 rounded" title="Heading">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/></svg>
                </button>
                <button type="button" @click="insertMarkdown('- ', '')" class="p-1.5 text-base-500 hover:bg-base-100 rounded" title="List">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/></svg>
                </button>
                <button type="button" @click="insertMarkdown('> ', '')" class="p-1.5 text-base-500 hover:bg-base-100 rounded" title="Quote">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"/></svg>
                </button>
              </div>
            </div>
            <textarea
              id="content-editor"
              x-model="article.content"
              required
              placeholder="Write your article content in Markdown..."
              class="w-full h-72 px-3 py-2 border border-base-200 rounded-lg focus:ring-2 focus:ring-accent-500 focus:border-accent-500 outline-none font-mono text-sm resize-none"
            ></textarea>
          </div>
          
          <div class="grid grid-cols-4 gap-4">
            <div>
              <label class="block text-sm font-medium text-base-700 mb-1">Author</label>
              <input
                type="text"
                x-model="article.author_name"
                placeholder="Your name"
                class="w-full px-3 py-2 border border-base-200 rounded-lg focus:ring-2 focus:ring-accent-500 focus:border-accent-500 outline-none"
              />
            </div>
            <div>
              <label class="block text-sm font-medium text-base-700 mb-1">Featured Image</label>
              <div class="flex gap-2">
                <input
                  type="file"
                  id="image-upload"
                  accept="image/*"
                  @change="uploadImage($event)"
                  class="hidden"
                />
                <input
                  type="url"
                  x-model="article.featured_image_url"
                  placeholder="https://..."
                  class="flex-1 px-3 py-2 border border-base-200 rounded-lg focus:ring-2 focus:ring-accent-500 focus:border-accent-500 outline-none text-sm"
                />
                <button
                  type="button"
                  @click="document.getElementById('image-upload').click()"
                  :disabled="uploading"
                  class="px-3 py-2 bg-base-100 text-base-700 rounded-lg hover:bg-base-200 transition-colors text-sm shrink-0"
                >
                  <span x-show="!uploading">Upload</span>
                  <span x-show="uploading">...</span>
                </button>
              </div>
              <div x-show="article.featured_image_url" class="mt-2">
                <img :src="article.featured_image_url" class="h-20 rounded border border-base-200 object-cover" />
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-base-700 mb-1">Status</label>
              <select
                x-model="article.status"
                class="w-full px-3 py-2 border border-base-200 rounded-lg focus:ring-2 focus:ring-accent-500 focus:border-accent-500 outline-none"
              >
                <option value="draft">Draft</option>
                <option value="published">Published</option>
                <option value="archived">Archived</option>
              </select>
            </div>
            <div>
              <label class="block text-sm font-medium text-base-700 mb-1">Published At</label>
              <input
                type="datetime-local"
                x-model="article.published_at"
                class="w-full px-3 py-2 border border-base-200 rounded-lg focus:ring-2 focus:ring-accent-500 focus:border-accent-500 outline-none"
              />
            </div>
          </div>
          
          <div class="flex items-center gap-6">
            <label class="flex items-center gap-2">
              <input type="checkbox" x-model="article.featured" class="w-4 h-4 text-accent-500 rounded" />
              <span class="text-sm text-base-700">Featured</span>
            </label>
            <label class="flex items-center gap-2">
              <input type="checkbox" x-model="article.hidden" class="w-4 h-4 text-accent-500 rounded" />
              <span class="text-sm text-base-700">Hidden</span>
            </label>
          </div>
        </div>
        
        <!-- Right: Preview -->
        <div x-show="previewMode" class="w-1/2 p-6 overflow-y-auto bg-base-50" style="display: none;">
          <div class="prose prose-sm max-w-none" x-html="renderPreview()"></div>
        </div>
      </div>
      
      <!-- Footer -->
      <div class="p-4 border-t border-base-200 flex items-center justify-between shrink-0">
        <div x-show="error" class="text-red-600 text-sm" x-text="error"></div>
        <div x-show="success" class="text-green-600 text-sm">Article updated!</div>
        <div class="flex items-center gap-3 ml-auto">
          <a href="/admin/news" class="px-4 py-2 text-base-600 hover:text-base-900 transition-colors">
            Cancel
          </a>
          <button
            type="submit"
            :disabled="submitting"
            class="px-6 py-2 bg-accent-500 text-white rounded-lg hover:bg-accent-600 transition-colors font-medium disabled:opacity-50"
          >
            <span x-show="!submitting">Save Changes</span>
            <span x-show="submitting">Saving...</span>
          </button>
        </div>
      </div>
    </form>
  </div>
</AdminLayout>

<script is:inline>
  function editNews() {
    const dataEl = document.getElementById('article-data');
    const _data = dataEl ? JSON.parse(dataEl.textContent) : {};
    
    return {
      previewMode: false,
      submitting: false,
      uploading: false,
      error: null,
      success: false,
      articleId: _data.id || '',
      article: {
        title: _data.title || '',
        slug: _data.slug || '',
        excerpt: _data.excerpt || '',
        content: _data.content || '',
        featured_image_url: _data.featured_image_url || '',
        author_name: _data.author_name || '',
        status: _data.status || 'draft',
        published_at: _data.published_at || '',
        featured: _data.featured || false,
        hidden: _data.hidden || false
      },
      
      insertMarkdown(before, after) {
        const textarea = document.getElementById('content-editor');
        const start = textarea.selectionStart;
        const end = textarea.selectionEnd;
        const text = this.article.content;
        const selected = text.substring(start, end);
        
        this.article.content = text.substring(0, start) + before + selected + after + text.substring(end);
        
        this.$nextTick(() => {
          textarea.focus();
          const newPos = start + before.length + selected.length;
          textarea.setSelectionRange(newPos, newPos);
        });
      },
      
      async uploadImage(event) {
        const file = event.target.files?.[0];
        if (!file) return;
        
        this.uploading = true;
        const formData = new FormData();
        formData.append('file', file);
        
        try {
          const res = await fetch('/api/admin/news/upload-image', {
            method: 'POST',
            body: formData
          });
          
          if (!res.ok) throw new Error('Upload failed');
          
          const data = await res.json();
          this.article.featured_image_url = data.url;
        } catch (err) {
          alert('Failed to upload image');
        } finally {
          this.uploading = false;
        }
      },
      
      renderPreview() {
        // Full article preview
        let html = '';
        
        // Header
        if (this.article.featured_image_url) {
          html += '<img src="' + this.article.featured_image_url + '" class="w-full h-48 object-cover rounded-lg mb-4" />';
        }
        html += '<h1 class="text-2xl font-bold mb-2">' + (this.article.title || 'Untitled') + '</h1>';
        if (this.article.excerpt) {
          html += '<p class="text-base-500 mb-4">' + this.article.excerpt + '</p>';
        }
        html += '<div class="text-sm text-base-400 mb-6">';
        if (this.article.author_name) html += 'By ' + this.article.author_name + ' · ';
        html += this.article.status;
        html += '</div>';
        html += '<hr class="my-4" />';
        
        // Content
        let content = this.article.content
          .replace(/^### (.+)$/gm, '<h3 class="text-lg font-semibold mt-4 mb-2">$1</h3>')
          .replace(/^## (.+)$/gm, '<h2 class="text-xl font-semibold mt-6 mb-3">$1</h2>')
          .replace(/^# (.+)$/gm, '<h1 class="text-2xl font-bold mt-6 mb-3">$1</h1>')
          .replace(/\*\*(.+?)\*\*/g, '<strong>$1</strong>')
          .replace(/\*(.+?)\*/g, '<em>$1</em>')
          .replace(/\[(.+?)\]\((.+?)\)/g, '<a href="$2" class="text-accent-500 underline">$1</a>')
          .replace(/^- (.+)$/gm, '<li class="ml-4">• $1</li>')
          .replace(/^> (.+)$/gm, '<blockquote class="border-l-4 border-base-300 pl-4 text-base-600 my-2">$1</blockquote>')
          .replace(/!\[([^\]]*)\]\(([^)]+)\)/g, '<img src="$2" alt="$1" class="max-w-full rounded my-4" />')
          .replace(/\n\n/g, '</p><p class="my-3">')
          .replace(/\n/g, '<br>');
        
        html += '<div class="text-base-700"><p class="my-3">' + content + '</p></div>';
        
        return html;
      },
      
      async updateArticle() {
        this.submitting = true;
        this.error = null;
        this.success = false;
        
        try {
          const data = {
            ...this.article,
            published_at: this.article.published_at ? new Date(this.article.published_at).toISOString() : null
          };
          
          const res = await fetch('/api/admin/news/' + this.articleId + '/update', {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
          });
          
          if (!res.ok) {
            const err = await res.json();
            throw new Error(err.error || 'Failed to update');
          }
          
          this.success = true;
          setTimeout(() => this.success = false, 3000);
        } catch (err) {
          this.error = err.message;
        } finally {
          this.submitting = false;
        }
      }
    };
  }
</script>
