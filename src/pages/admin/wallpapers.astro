---
export const prerender = false;

import AdminLayout from "@/layouts/AdminLayout.astro";
import { checkAdminAuth } from '@/lib/utils/admin';
import { getSupabaseAdmin } from '@/lib/supabase/admin';
import { getWallpaperAuthorName } from '@/lib/utils/author';

// Check admin auth
if (!checkAdminAuth(Astro.cookies)) {
  return Astro.redirect('/admin');
}

// Fetch all wallpapers (including hidden)
const supabaseAdmin = getSupabaseAdmin();
const { data: wallpapers } = await supabaseAdmin
  .from('wallpapers')
  .select('*')
  .order('created_at', { ascending: false });

// Stats
const pendingCount = wallpapers?.filter(w => w.status === 'pending').length || 0;
const publishedCount = wallpapers?.filter(w => w.status === 'published').length || 0;
const totalDownloads = wallpapers?.reduce((sum, w) => sum + (w.download_count || 0), 0) || 0;
---

<AdminLayout title="Wallpapers" currentPage="wallpapers">
  <!-- Stats -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
    <div class="bg-white border border-base-200 rounded-xl p-6">
      <div class="text-3xl font-bold text-base-900">{wallpapers?.length || 0}</div>
      <div class="text-sm text-base-600 mt-1">Total Wallpapers</div>
    </div>
    <div class="bg-white border border-base-200 rounded-xl p-6">
      <div class="text-3xl font-bold text-yellow-500">{pendingCount}</div>
      <div class="text-sm text-base-600 mt-1">Pending Review</div>
    </div>
    <div class="bg-white border border-base-200 rounded-xl p-6">
      <div class="text-3xl font-bold text-green-500">{publishedCount}</div>
      <div class="text-sm text-base-600 mt-1">Published</div>
    </div>
    <div class="bg-white border border-base-200 rounded-xl p-6">
      <div class="text-3xl font-bold text-accent-500">{totalDownloads}</div>
      <div class="text-sm text-base-600 mt-1">Total Downloads</div>
    </div>
  </div>

  <!-- Filters -->
  <div 
    x-data="{ filter: 'all', search: '' }"
    class="space-y-4"
  >
    <div class="flex items-center gap-4 flex-wrap">
      <div class="flex items-center gap-2 bg-white border border-base-200 rounded-lg p-1">
        <button
          @click="filter = 'all'"
          :class="filter === 'all' ? 'bg-base-900 text-white' : 'text-base-600 hover:bg-base-100'"
          class="px-4 py-2 rounded-md text-sm font-medium transition-colors"
        >
          All ({wallpapers?.length || 0})
        </button>
        <button
          @click="filter = 'pending'"
          :class="filter === 'pending' ? 'bg-yellow-500 text-white' : 'text-base-600 hover:bg-base-100'"
          class="px-4 py-2 rounded-md text-sm font-medium transition-colors"
        >
          Pending ({pendingCount})
        </button>
        <button
          @click="filter = 'published'"
          :class="filter === 'published' ? 'bg-green-500 text-white' : 'text-base-600 hover:bg-base-100'"
          class="px-4 py-2 rounded-md text-sm font-medium transition-colors"
        >
          Published ({publishedCount})
        </button>
      </div>
      
      <div class="flex-1"></div>
      
      <input
        type="text"
        x-model="search"
        placeholder="Search wallpapers..."
        class="px-4 py-2 border border-base-200 rounded-lg bg-white focus:ring-2 focus:ring-accent-500 focus:border-accent-500 outline-none w-64"
      />
    </div>

    <!-- Wallpapers Grid -->
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
      {wallpapers && wallpapers.map((wallpaper) => {
        const authorName = getWallpaperAuthorName(wallpaper);
        const title = wallpaper.title || 'Untitled';
        return (
          <div
            class="bg-white border border-base-200 rounded-xl overflow-hidden group"
            x-show={`(filter === 'all' || filter === '${wallpaper.status}') && ('${title}'.toLowerCase().includes(search.toLowerCase()) || search === '')`}
          >
            <!-- Thumbnail -->
            <div class="aspect-[3/5] relative overflow-hidden bg-base-100">
              <img
                src={`/wallpapers/${wallpaper.id}/thumbnail.webp`}
                alt={title}
                class="w-full h-full object-cover"
                loading="lazy"
                onerror={`this.onerror=null; this.src='/wallpapers/${wallpaper.id}/image.jpg';`}
              />
              <!-- Status badge -->
              <div class="absolute top-2 left-2">
                <span class={`inline-flex items-center px-2 py-0.5 rounded text-xs font-medium ${
                  wallpaper.status === 'published' ? 'bg-green-500 text-white' :
                  wallpaper.status === 'pending' ? 'bg-yellow-500 text-white' :
                  'bg-red-500 text-white'
                }`}>
                  {wallpaper.status}
                </span>
              </div>
              {wallpaper.hidden && (
                <div class="absolute top-2 right-2">
                  <span class="bg-base-900/80 text-white text-xs px-2 py-0.5 rounded">Hidden</span>
                </div>
              )}
              <!-- Hover actions -->
              <div class="absolute inset-0 bg-base-900/60 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center gap-2">
                <a
                  href={`/wallpapers/${wallpaper.id}`}
                  target="_blank"
                  class="p-2 bg-white rounded-lg text-base-700 hover:bg-base-100 transition-colors"
                  title="View"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                </a>
                <button
                  data-action="publish"
                  data-id={wallpaper.id}
                  class={`p-2 rounded-lg transition-colors ${wallpaper.status === 'published' ? 'bg-green-500 text-white' : 'bg-white text-base-700 hover:bg-green-500 hover:text-white'}`}
                  title="Publish"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                </button>
                <button
                  data-action="hide"
                  data-id={wallpaper.id}
                  class={`p-2 rounded-lg transition-colors ${wallpaper.hidden ? 'bg-base-700 text-white' : 'bg-white text-base-700 hover:bg-base-700 hover:text-white'}`}
                  title={wallpaper.hidden ? 'Show' : 'Hide'}
                >
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                  </svg>
                </button>
                <button
                  data-action="delete"
                  data-id={wallpaper.id}
                  class="p-2 bg-white rounded-lg text-base-700 hover:bg-red-500 hover:text-white transition-colors"
                  title="Delete"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                  </svg>
                </button>
              </div>
            </div>
            <!-- Info -->
            <div class="p-3">
              <h3 class="font-medium text-sm text-base-900 truncate">{title}</h3>
              <div class="flex items-center justify-between mt-1">
                <span class="text-xs text-base-500">{authorName || 'Unknown'}</span>
                <span class="text-xs text-base-500">{wallpaper.download_count || 0} â†“</span>
              </div>
              {wallpaper.category && (
                <span class="inline-block mt-2 text-xs bg-base-100 text-base-600 px-2 py-0.5 rounded">
                  {wallpaper.category}
                </span>
              )}
            </div>
          </div>
        );
      })}
    </div>
    
    {(!wallpapers || wallpapers.length === 0) && (
      <div class="text-center py-12 bg-white border border-base-200 rounded-xl text-base-500">
        No wallpapers found
      </div>
    )}
  </div>
</AdminLayout>

<script>
  // Handle wallpaper actions
  document.querySelectorAll('[data-action]').forEach(btn => {
    btn.addEventListener('click', async (e) => {
      e.preventDefault();
      e.stopPropagation();
      
      const button = e.currentTarget as HTMLButtonElement;
      const action = button.dataset.action;
      const id = button.dataset.id;
      
      if (!action || !id) return;
      
      try {
        let endpoint = '';
        
        switch (action) {
          case 'publish':
            endpoint = `/api/admin/wallpapers/${id}/publish`;
            break;
          case 'hide':
            endpoint = `/api/admin/wallpapers/${id}/hide`;
            break;
          case 'delete':
            if (!confirm('Are you sure you want to delete this wallpaper?')) return;
            endpoint = `/api/admin/wallpapers/${id}/delete`;
            break;
        }
        
        const res = await fetch(endpoint, { method: 'POST' });
        
        if (res.ok) {
          window.location.reload();
        } else {
          const error = await res.json();
          alert(error.error || 'Action failed');
        }
      } catch (error) {
        console.error('Action error:', error);
        alert('An error occurred');
      }
    });
  });
</script>
