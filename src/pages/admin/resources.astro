---
export const prerender = false;

import AdminLayout from "@/layouts/AdminLayout.astro";
import { checkAdminAuth } from '@/lib/utils/admin';
import { getSupabaseAdmin } from '@/lib/supabase/admin';

// Check admin auth
if (!checkAdminAuth(Astro.cookies)) {
  return Astro.redirect('/admin');
}

// Fetch all resources (including hidden)
const supabaseAdmin = getSupabaseAdmin();
const { data: resources } = await supabaseAdmin
  .from('resources')
  .select('*')
  .order('created_at', { ascending: false });

// Stats
const pendingCount = resources?.filter(r => r.status === 'pending').length || 0;
const approvedCount = resources?.filter(r => r.status === 'approved').length || 0;
const totalDownloads = resources?.reduce((sum, r) => sum + (r.downloads_count || 0), 0) || 0;
---

<AdminLayout title="Resources" currentPage="resources">
  <!-- Stats -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
    <div class="bg-white border border-base-200 rounded-xl p-6">
      <div class="text-3xl font-bold text-base-900">{resources?.length || 0}</div>
      <div class="text-sm text-base-600 mt-1">Total Resources</div>
    </div>
    <div class="bg-white border border-base-200 rounded-xl p-6">
      <div class="text-3xl font-bold text-yellow-500">{pendingCount}</div>
      <div class="text-sm text-base-600 mt-1">Pending Review</div>
    </div>
    <div class="bg-white border border-base-200 rounded-xl p-6">
      <div class="text-3xl font-bold text-green-500">{approvedCount}</div>
      <div class="text-sm text-base-600 mt-1">Approved</div>
    </div>
    <div class="bg-white border border-base-200 rounded-xl p-6">
      <div class="text-3xl font-bold text-accent-500">{totalDownloads}</div>
      <div class="text-sm text-base-600 mt-1">Total Downloads</div>
    </div>
  </div>

  <!-- Filters -->
  <div 
    x-data="{ filter: 'all', search: '' }"
    class="space-y-4"
  >
    <div class="flex items-center gap-4 flex-wrap">
      <div class="flex items-center gap-2 bg-white border border-base-200 rounded-lg p-1">
        <button
          @click="filter = 'all'"
          :class="filter === 'all' ? 'bg-base-900 text-white' : 'text-base-600 hover:bg-base-100'"
          class="px-4 py-2 rounded-md text-sm font-medium transition-colors"
        >
          All ({resources?.length || 0})
        </button>
        <button
          @click="filter = 'pending'"
          :class="filter === 'pending' ? 'bg-yellow-500 text-white' : 'text-base-600 hover:bg-base-100'"
          class="px-4 py-2 rounded-md text-sm font-medium transition-colors"
        >
          Pending ({pendingCount})
        </button>
        <button
          @click="filter = 'approved'"
          :class="filter === 'approved' ? 'bg-green-500 text-white' : 'text-base-600 hover:bg-base-100'"
          class="px-4 py-2 rounded-md text-sm font-medium transition-colors"
        >
          Approved ({approvedCount})
        </button>
      </div>
      
      <div class="flex-1"></div>
      
      <input
        type="text"
        x-model="search"
        placeholder="Search resources..."
        class="px-4 py-2 border border-base-200 rounded-lg bg-white focus:ring-2 focus:ring-accent-500 focus:border-accent-500 outline-none w-64"
      />
    </div>

    <!-- Resources List -->
    <div class="bg-white border border-base-200 rounded-xl overflow-hidden">
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-base-50 border-b border-base-200">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-semibold text-base-500 uppercase tracking-wider">Resource</th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-base-500 uppercase tracking-wider">Type</th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-base-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-right text-xs font-semibold text-base-500 uppercase tracking-wider">Downloads</th>
              <th class="px-6 py-3 text-right text-xs font-semibold text-base-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-base-200">
            {resources && resources.map((resource) => (
              <tr
                class="hover:bg-base-50 transition-colors"
                x-show={`(filter === 'all' || filter === '${resource.status}') && ('${resource.title}'.toLowerCase().includes(search.toLowerCase()) || search === '')`}
              >
                <td class="px-6 py-4">
                  <div class="flex items-center gap-3">
                    <div>
                      <div class="font-medium text-base-900 flex items-center gap-2">
                        {resource.title}
                        {resource.starred && <span class="text-yellow-500">‚≠ê</span>}
                        {resource.hidden && <span class="text-xs bg-base-200 text-base-500 px-2 py-0.5 rounded">Hidden</span>}
                      </div>
                      <div class="text-sm text-base-500 truncate max-w-md">
                        {resource.description?.substring(0, 80)}...
                      </div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4">
                  <span class="text-sm text-base-600">{resource.type}</span>
                </td>
                <td class="px-6 py-4">
                  <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${
                    resource.status === 'approved' ? 'bg-green-100 text-green-800' :
                    resource.status === 'pending' ? 'bg-yellow-100 text-yellow-800' :
                    'bg-red-100 text-red-800'
                  }`}>
                    {resource.status}
                  </span>
                </td>
                <td class="px-6 py-4 text-right text-sm text-base-600">
                  {resource.downloads_count || 0}
                </td>
                <td class="px-6 py-4 text-right">
                  <div class="flex items-center justify-end gap-2">
                    <a
                      href={`/resources/${resource.id}`}
                      target="_blank"
                      class="p-2 text-base-400 hover:text-base-600 hover:bg-base-100 rounded-lg transition-colors"
                      title="View"
                    >
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                      </svg>
                    </a>
                    <a
                      href={`/admin/resources/${resource.id}`}
                      class="p-2 text-base-400 hover:text-accent-500 hover:bg-accent-50 rounded-lg transition-colors"
                      title="Edit"
                    >
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                      </svg>
                    </a>
                    <button
                      data-action="approve"
                      data-id={resource.id}
                      class={`p-2 rounded-lg transition-colors ${resource.status === 'approved' ? 'text-green-500 bg-green-50' : 'text-base-400 hover:text-green-500 hover:bg-green-50'}`}
                      title="Approve"
                    >
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                    </button>
                    <button
                      data-action="star"
                      data-id={resource.id}
                      class={`p-2 rounded-lg transition-colors ${resource.starred ? 'text-yellow-500 bg-yellow-50' : 'text-base-400 hover:text-yellow-500 hover:bg-yellow-50'}`}
                      title="Star"
                    >
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill={resource.starred ? 'currentColor' : 'none'} viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                      </svg>
                    </button>
                    <button
                      data-action="hide"
                      data-id={resource.id}
                      class={`p-2 rounded-lg transition-colors ${resource.hidden ? 'text-base-900 bg-base-200' : 'text-base-400 hover:text-base-600 hover:bg-base-100'}`}
                      title={resource.hidden ? 'Show' : 'Hide'}
                    >
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        {resource.hidden ? (
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                        ) : (
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                        )}
                      </svg>
                    </button>
                    <button
                      data-action="delete"
                      data-id={resource.id}
                      class="p-2 text-base-400 hover:text-red-500 hover:bg-red-50 rounded-lg transition-colors"
                      title="Delete"
                    >
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                      </svg>
                    </button>
                  </div>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
      
      {(!resources || resources.length === 0) && (
        <div class="text-center py-12 text-base-500">
          No resources found
        </div>
      )}
    </div>
  </div>
</AdminLayout>

<script>
  // Handle resource actions
  document.querySelectorAll('[data-action]').forEach(btn => {
    btn.addEventListener('click', async (e) => {
      const button = e.currentTarget as HTMLButtonElement;
      const action = button.dataset.action;
      const id = button.dataset.id;
      
      if (!action || !id) return;
      
      try {
        let endpoint = '';
        let method = 'POST';
        let body: any = {};
        
        switch (action) {
          case 'approve':
            endpoint = `/api/admin/resources/${id}/approve`;
            break;
          case 'star':
            endpoint = `/api/admin/resources/${id}/star`;
            break;
          case 'hide':
            endpoint = `/api/admin/resources/${id}/hide`;
            break;
          case 'delete':
            if (!confirm('Are you sure you want to delete this resource?')) return;
            endpoint = `/api/admin/resources/${id}/delete`;
            break;
        }
        
        const res = await fetch(endpoint, { method });
        
        if (res.ok) {
          window.location.reload();
        } else {
          const error = await res.json();
          alert(error.error || 'Action failed');
        }
      } catch (error) {
        console.error('Action error:', error);
        alert('An error occurred');
      }
    });
  });
</script>
